#!/usr/bin/perl

use strict;
use warnings;

use FindBin qw($Bin);
use lib "$Bin/../../wrapper/lib";
use Fdftest::Fdfapi;
use Fdftest::RemoteNode;
use Fdftest::Stress;
use Test::More 'no_plan';
use threads;
use threads::shared;
use threads 'exit' => 'threads_only';
use Data::Dumper;

my $node;
my @count:shared;
my $num_nodes = 1;
my @nodes;
my @threads;
my %node_cguids:shared;
my $nctr = 1000;
my @ctr_type = ("BTREE","BTREE");
my $ret;
my $cguid;

sub worker_open_ctn{
    my ($index) = @_;
    $node = $nodes[$index];
    foreach(1..$nctr)
    {
        $ret = ZSOpen($node->conn(1),"ctr-$_",3,0,"ZS_CTNR_CREATE","yes","ZS_DURABILITY_HW_CRASH_SAFE",$ctr_type[$_%2]);
        like ($ret, qr/^OK.*/, $node->{'port'}.":".$ret);
        $cguid = $1 if ($ret =~ /OK cguid=(\d+)/);
        $node_cguids{$index}{$_} = $cguid;   
        #print "index=$index,node=$node->{'port'}, cguid=$node_cguids{$index}{$_}\n";
        $ret = ZSClose($node->conn(1), $cguid);
        like ($ret, qr/^OK.*/, $node->{'port'}.":".$ret);

    }
}


sub worker_reopen_ctn{
    my ($index, $count) = @_;
    $node = $nodes[$index];
    foreach(($count+1)..$nctr)
    {
        $ret = ZSOpen($node->conn(1),"ctr-$_",3,0,"ZS_CTNR_RW_MODE","yes","ZS_DURABILITY_HW_CRASH_SAFE",$ctr_type[$_%2]);
        like ($ret, qr/^OK.*/, $node->{'port'}.":".$ret);
    }
}

sub worker_delete_ctn{
    $SIG{'KILL'} = sub { print "killed\n"; threads->exit(); };
    my ($index) = @_;
    $count[$index] = 0;
    $node = $nodes[$index];
    #print "worker_delete_ctn: index=$index, node=$node->{'port'}\n";
    foreach(1..$nctr)
    {
        my $cguid = $node_cguids{$index}{$_};
        $ret = ZSDelete($node->conn(1), $cguid);
        like ($ret, qr/^OK.*/, $node->{'port'}.":".$ret);
        $count[$index]++ if ($ret =~ /OK cguid=.*/);
    }
}

sub test_run_node {
    foreach(@nodes)
    {
        $ret = $_->start(
            ZS_REFORMAT  => 1
            );
        like($ret, qr/OK.*/, 'remote engine started');
    }

    
    @threads = ();
    foreach(0..@nodes-1)
    {
        $node_cguids{$_} = &share({});
        push(@threads,threads->new(\&worker_open_ctn,$_));
    }
    $_->join for (@threads);

    @threads = ();
    foreach(0..@nodes-1)
    {
        $node = $nodes[$_];
        push(@threads,threads->new(\&worker_delete_ctn,$_));
    }
}

sub test_run_recovery {

    print "<<< Test recovery with async_write=yes on remote engine >>>.\n";
    foreach(@nodes)
    {   
        $ret = $_->start(
            ZS_REFORMAT  =>0 
            );
        like($ret, qr/OK.*/, 'remote engine restarted');
    }

    @threads = ();
    foreach(0..@nodes-1)
    {
        print "start to worker_reopen_ctn,count=$count[$_]\n";
        push(@threads,threads->new(\&worker_reopen_ctn,$_,$count[$_]));
    }
    $_->join for (@threads);
    return;
}

my $remote_dir = "/schooner/data/remote_ftf";
sub test_init {
    my $ssh = shift;
    my $ip = "10.197.16.176";
    my $port = "24422";

    foreach(1..$num_nodes)
    {
        $node = Fdftest::RemoteNode->new(
            ip          => $ip,
            port        => $port+$_,
            nconn       => 8,
            stats_log   => "/tmp/".($port+$_)."/zsstats.log",
            zs_log      => "/tmp/".($port+$_)."/zs.log",
            prop        => "$remote_dir/conf/zs_ins".$_.".prop",
            local_prop  => "$Bin/../../conf/zs_ins".$_.".prop",
            ssh         => $ssh,
        );
        push @nodes, $node;

    }

}

sub test_clean {
    foreach(@nodes){
        print "node $_ to stop\n";
        $_->stop();
        $_->set_ZS_prop(ZS_REFORMAT  => 1);
    }
    return;
}

#
# main
#
{
    my $ssh = prepare(ip => "10.197.16.176");
    shared($ssh);
    test_init($ssh);

    foreach(@nodes){print "node = $_\n";}
    system("sh -c ulimit -n 409600");
    test_run_node();
    sleep(10);
    $nodes[0]->power_reset();
    foreach(@threads){
        $_->kill('KILL');
    }
    foreach(@nodes)
    {
        $_->{ssh} = $nodes[0]->{ssh};
    }
    test_run_recovery();
    foreach(@nodes)
    {
        $ret = ZSGetConts($_->conn(0),$nctr-$count[0]);
        print "ZSGetConts:$ret\n";
    }
    test_clean();
}


# clean ENV
END {
    foreach(@nodes){
        $_->clean();
    }
}

