#!/usr/bin/perl

use strict;
use warnings;

use FindBin qw($Bin);
use lib "$Bin/../../wrapper/lib";
use Fdftest::Fdfapi;
use Fdftest::Node;
use Fdftest::BasicTest;
use Test::More tests => 2;

my $node; 

sub test_run {
##########################################
#         Asynce_write=yes               #
##########################################
    print "<<<<<< Test with async_write=yes >>>.\n";
    my $ret;
    my $cguid;
    my $i = 4;

    $ret = $node->start(
               ZS_REFORMAT  => 1,
           );
    like($ret, qr/OK.*/, 'Node start');

#    for(my $i=0; $i<=5; $i++){

    subtest "Test with ctnr c$i" => sub {
        for(my $j=1; $j<=65000; $j++){
        	$ret=OpenContainer($node->conn(0), "c$i\_$j","ZS_CTNR_CREATE",5120,$i,"ZS_FULL_DURABILITY","yes");
        	$cguid = $1 if($ret =~ /OK cguid=(\d+)/);
            WriteReadObjects($node->conn(0),$cguid,0,25,100,40,120);
            ContainerEnumerate($node->conn(0),$cguid,120);
            CloseContainer($node->conn(0),$cguid);
        }
    }

#    }
#    return;
}


sub test_run_2 {
##########################################
#         Asynce_write=no               #
##########################################
    print "<<<<<< Test with async_write=no >>>.\n";
    my $ret;
    my $cguid;
    my $i = 4;
    $ret = $node->start(
               ZS_REFORMAT  => 1,
           );
    like($ret, qr/OK.*/, 'Node start');

#    for(my $i=0; $i<=5; $i++){

    subtest "Test with ctnr c$i" => sub {
        for(my $j=1; $j<=65000; $j++){
        	$ret=OpenContainer($node->conn(0), "c$i\_$j","ZS_CTNR_CREATE",5120,$i,"ZS_FULL_DURABILITY","no");
        	$cguid = $1 if($ret =~ /OK cguid=(\d+)/);
            WriteReadObjects($node->conn(0),$cguid,0,25,100,40,120);
            ContainerEnumerate($node->conn(0),$cguid,120);
            CloseContainer($node->conn(0),$cguid);
        }
    }

#    }
#    return;
}
sub test_init {
    $node = Fdftest::Node->new(
                ip     => "127.0.0.1", 
                port   => "24422",
                nconn  => 1,
            );

}

sub test_clean {
    $node->stop();
    $node->set_ZS_prop(ZS_REFORMAT  => 1);

    return;
}

#
# main
#
{
    test_init();
    
    test_run();

    test_clean();

    test_init();
    
    test_run_2();

    test_clean();
}

